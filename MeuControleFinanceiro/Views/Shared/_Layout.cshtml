<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>MeuControleFinanceiro</title>
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />

    @* Uncomment to use the HtmlEditor control *@
    @* <script src="https://cdnjs.cloudflare.com/ajax/libs/quill/1.3.6/quill.min.js"></script> *@


    @Styles.Render("~/Content/bundle")
    @Styles.Render("~/Content/DevExtremeBundle")
    @Scripts.Render("~/Scripts/bundle")
    @Scripts.Render("~/Scripts/DevExtremeBundle")

    <script src="https://kit.fontawesome.com/8188cb27f9.js" crossorigin="anonymous"></script>

    <script src="https://unpkg.com/devextreme-intl/dist/devextreme-intl.min.js"></script>

    <style>
        body {
            font-family: 'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif
        }
    </style>

    <script>
        var formatCurrency = new Intl.NumberFormat("pt-BR", { style: "currency", currency: "BRL", minimumFractionDigits: 2 }).format;
    </script>

</head>

<body style="padding-top: 5rem;">

    <nav class="navbar navbar-dark bg-dark fixed-top navbar-expand-md">
        <a class="navbar-brand" href="/">Meu Controle Financeiro</a>

        <button type="button" class="navbar-toggler" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div id="navbar" class="collapse navbar-collapse">
            <ul class="navbar-nav mr-auto">
                <li class="active nav-item"><a href="#" class="nav-link">Home</a></li>
                <li class="nav-item">@Html.ActionLink("Contas", "Index", "Conta", null, new { @class = "nav-link" })</li>
                <li class="nav-item">@Html.ActionLink("Receitas", "MinhaReceita", "Receita", null, new { @class = "nav-link" })</li>
                <li class="nav-item">@Html.ActionLink("Despesas", "Index", "Despesa", null, new { @class = "nav-link" })</li>


                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        Cadastros
                    </a>
                    <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                        @Html.ActionLink("Categoria", "Index", "Categoria", null, new { @class = "dropdown-item" })
                        @*<a class="dropdown-item" href="#">Contas</a>
                <div class="dropdown-divider"></div>
                <a class="dropdown-item" href="#">Something else here</a>*@
                    </div>
                </li>
            </ul>
        </div>
    </nav>

    <main role="main" class="container">
        @RenderBody()
    </main>
</body>



</html>